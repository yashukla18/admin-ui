  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug cdk",
      "type": "node",
      "request": "launch",
      "env": {
        "AWS_PROFILE": "ys-dev"
      },
      "skipFiles": ["<node_internals>/**"],
      "args": ["/opt/homebrew/lib/node_modules/aws-cdk/bin/cdk.js", "synth"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
